<% content_for :title, "Gráfico de Comparação SRS-2 - #{@patient.full_name}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1">
            <i class="bi bi-graph-up me-2"></i>
            Gráfico de Comparação SRS-2
          </h1>
          <p class="text-muted mb-0">
            Comparação entre autorelato e heterorelato para <strong><%= @patient.full_name %></strong>
          </p>
        </div>
        <div>
          <%= link_to patient_path(@patient), class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-1"></i>
            Voltar ao Paciente
          <% end %>
        </div>
      </div>

      <!-- Informações dos Relatórios -->
      <div class="row mb-4">
        <%= chart_report_info(@report_info) %>
      </div>

      <!-- Gráfico -->
      <div class="card">
        <div class="card-body">
          <%= srs2_comparison_chart(@chart_data, height: "500px") %>
        </div>
      </div>

      <!-- Legenda das Zonas de Prejuízo -->
      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h6 class="card-title mb-0">
                <i class="bi bi-info-circle me-1"></i>
                Interpretação dos T-Scores
              </h6>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2" style="width: 20px; height: 20px; background-color: rgba(40, 167, 69, 0.3); border: 1px solid #28a745;"></div>
                    <span><strong>50-59:</strong> Sem prejuízo</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2" style="width: 20px; height: 20px; background-color: rgba(255, 193, 7, 0.3); border: 1px solid #ffc107;"></div>
                    <span><strong>60-64:</strong> Prejuízo leve</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2" style="width: 20px; height: 20px; background-color: rgba(253, 126, 20, 0.3); border: 1px solid #fd7e14;"></div>
                    <span><strong>65-74:</strong> Prejuízo moderado</span>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2" style="width: 20px; height: 20px; background-color: rgba(220, 53, 69, 0.3); border: 1px solid #dc3545;"></div>
                    <span><strong>75+:</strong> Prejuízo grave</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
<%= @chart_service.chart_js_function.html_safe %>
</script>
