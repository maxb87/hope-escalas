<% content_for :title, "Gráfico de Comparação SRS-2 - #{@patient.full_name}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1">
            <i class="bi bi-graph-up me-2"></i>
            Gráfico de Comparação SRS-2
          </h1>
          <p class="text-muted mb-0">
            Comparação entre autorelato e heterorelato para <strong><%= @patient.full_name %></strong>
          </p>
        </div>
        <div>
          <%= link_to patient_path(@patient), class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left me-1"></i>
            Voltar ao Paciente
          <% end %>
        </div>
      </div>

      <!-- Informações dos Relatórios -->
      <div class="row mb-4">
        <%= chart_report_info(@report_info) %>
      </div>

      <!-- Gráfico -->
      <div class="card my-4">
        <div class="card-body">
          <%= srs2_comparison_chart(@chart_data, height: "500px") %>
        </div>
      </div>

      <!-- Interpretação dos Resultados -->
      <div class="card my-4">
        <div class="card-body">
          <p>Interpretação dos Resultados</p>
        </div>
      </div>

<script>
<%= @chart_service.chart_js_function.html_safe %>
</script>
