<% 
  # Mapeamento das categorias PSA
  psa_categories = {
    'A' => { name: 'Processamento Tátil/Olfativo', items: (1..8).to_a },
    'B' => { name: 'Processamento Vestibular/Proprioceptivo', items: (9..16).to_a },
    'C' => { name: 'Processamento Visual', items: (17..26).to_a },
    'D' => { name: 'Processamento Tátil', items: (27..39).to_a },
    'E' => { name: 'Nível de Atividade', items: (40..49).to_a },
    'F' => { name: 'Processamento Auditivo', items: (50..60).to_a }
  }
%>

<div class="psa-show">
  <!-- Header específico para PSA -->
  <div class="alert alert-info mb-4">
    <div class="d-flex align-items-center">
      <i class="bi bi-clipboard-data me-3 fs-4"></i>
      <div>
        <h5 class="mb-1">
          <i class="bi bi-person me-2"></i>Escala PSA - Perfil Sensorial do Adulto/Adolescente
        </h5>
        <p class="mb-0">
          <strong>Paciente:</strong> <%= @scale_response.patient.full_name %> | 
          <strong>Pontuação Total:</strong> <%= @scale_response.total_score %> pontos | 
          <strong>Interpretação:</strong> <%= @scale_response.interpretation %>
        </p>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-primary"><%= @scale_response.total_score %></h3>
          <p class="mb-0">Pontuação Total</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-success"><%= @scale_response.completion_percentage %>%</h3>
          <p class="mb-0">Completude</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-info"><%= @scale_response.interpretation %></h3>
          <p class="mb-0">Nível de Responsividade</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h3 class="text-warning">300</h3>
          <p class="mb-0">Pontuação Máxima</p>
        </div>
      </div>
    </div>
  </div>

  <div class="accordion" id="psaResponsesAccordion">
    <% psa_categories.each_with_index do |(category_code, category_data), index| %>
      <% category_responses = @scale_response.formatted_answers&.select { |item| category_data[:items].include?(item[:item_number]) } %>
      <% category_score = category_responses.sum { |item| item[:answer_value].to_i } %>
      <% category_average = category_responses.count > 0 ? (category_score.to_f / category_responses.count).round(2) : 0 %>
      
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= category_code %>">
          <button class="accordion-button <%= 'collapsed' unless index == 0 %>" 
                  type="button" 
                  data-bs-toggle="collapse" 
                  data-bs-target="#collapse<%= category_code %>" 
                  aria-expanded="<%= index == 0 ? 'true' : 'false' %>" 
                  aria-controls="collapse<%= category_code %>">
            <i class="bi bi-list-check me-2"></i>
            <strong>Categoria <%= category_code %>: <%= category_data[:name] %></strong>
            <span class="badge bg-primary ms-2"><%= category_responses.count %> questões</span>
            <span class="badge bg-success ms-2"><%= category_score %> pts</span>
            <span class="badge bg-info ms-2">Média: <%= category_average %></span>
          </button>
        </h2>
        
        <div id="collapse<%= category_code %>" 
             class="accordion-collapse collapse <%= 'show' if index == 0 %>" 
             aria-labelledby="heading<%= category_code %>" 
             data-bs-parent="#psaResponsesAccordion">
          <div class="accordion-body">
            <div class="row">
              <% category_responses.each do |response| %>
                <div class="col-md-6 col-lg-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <h6 class="card-title">
                        <span class="badge bg-secondary me-2">Item <%= response[:item_number] %></span>
                        <%= response[:question_text] %>
                      </h6>
                      <p class="mb-0">
                        <strong>Resposta:</strong> 
                        <span class="badge bg-primary"><%= response[:answer_value] %></span> 
                        — <%= response[:answer_text] %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            
            <!-- Comentários da categoria (se houver) -->
            <% if @scale_response.results && @scale_response.results.dig("comments", category_code) %>
              <div class="mt-3">
                <div class="alert alert-light">
                  <h6><i class="bi bi-chat-text me-2"></i>Comentários da Categoria</h6>
                  <p class="mb-0"><%= @scale_response.results.dig("comments", category_code, "comment") %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="card mt-4">
    <div class="card-header">
      <h6 class="mb-0">
        <i class="bi bi-bar-chart me-2"></i>
        Análise por Categorias
      </h6>
    </div>
    <div class="card-body">
      <div class="row">
        <% psa_categories.each do |(category_code, category_data)| %>
          <% category_responses = @scale_response.formatted_answers&.select { |item| category_data[:items].include?(item[:item_number]) } %>
          <% category_score = category_responses.sum { |item| item[:answer_value].to_i } %>
          <% category_average = category_responses.count > 0 ? (category_score.to_f / category_responses.count).round(2) : 0 %>
          <% category_max = category_data[:items].count * 5 %>
          <% category_percentage = category_max > 0 ? (category_score.to_f / category_max * 100).round(1) : 0 %>
          
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h6 class="card-title"><%= category_data[:name] %></h6>
                <div class="mb-2">
                  <div class="d-flex justify-content-between">
                    <span>Pontuação:</span>
                    <span><strong><%= category_score %>/<%= category_max %></strong></span>
                  </div>
                  <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: <%= category_percentage %>%"></div>
                  </div>
                </div>
                <div class="mb-2">
                  <div class="d-flex justify-content-between">
                    <span>Média:</span>
                    <span><strong><%= category_average %></strong></span>
                  </div>
                </div>
                <div class="d-flex justify-content-between">
                  <span>Completude:</span>
                  <span><strong><%= category_responses.count %>/<%= category_data[:items].count %></strong></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <% if is_professional_or_admin %>
    <div class="mt-4">
      <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <div class="flex-grow-1">
          <strong>Interpretação de Resultados PSA disponível!</strong><br>
          Acesse a interpretação completa dos resultados com análises detalhadas por categoria.
        </div>
        <div class="ms-3">
          <%= link_to "Ver Interpretação", interpretation_scale_response_path(@scale_response), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
