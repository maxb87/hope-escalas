<div class="psa-show">
  <h3>PSA Show - Versão Simples</h3>
  <p>Paciente: <%= @scale_response.patient.full_name %></p>
  <p>Pontuação: <%= @scale_response.total_score %></p>
  <p>Interpretação: <%= @scale_response.interpretation %></p>
  <p>Completude: <%= @scale_response.completion_percentage %>%</p>
  
  <!-- Teste básico sem usar formatted_answers -->
  <div class="mt-3">
    <h5>Respostas:</h5>
    <% if @scale_response.answers.present? %>
      <p>Total de respostas: <%= @scale_response.answers.count %></p>
      <% @scale_response.answers.each do |key, value| %>
        <p><%= key %>: <%= value %></p>
      <% end %>
    <% else %>
      <p>Nenhuma resposta encontrada</p>
    <% end %>
  </div>
</div>
