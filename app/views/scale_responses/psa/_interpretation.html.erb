<div class="psa-interpretation">
  <!-- Header específico para interpretação PSA -->
  <div class="alert alert-info mb-4">
    <div class="d-flex align-items-center">
      <i class="bi bi-graph-up me-3 fs-4"></i>
      <div>
        <h5 class="mb-1">
          <i class="bi bi-clipboard-data me-2"></i>
          Interpretação PSA - Perfil Sensorial do Adulto/Adolescente
        </h5>
        <p class="mb-0">
          <strong>Paciente:</strong> <%= @scale_response.patient.full_name %> | 
          <strong>Pontuação Total:</strong> <%= @scale_response.total_score %>/300 pontos | 
          <strong>Interpretação:</strong> <%= @scale_response.interpretation %>
        </p>
      </div>
    </div>
  </div>

  <!-- Análise por Categorias -->
  <div class="card mb-4">
    <div class="card-header">
      <h6 class="mb-0">
        <i class="bi bi-list-check me-2"></i>
        Análise Detalhada por Categorias
      </h6>
    </div>
    <div class="card-body">
      <% if @scale_response_adapter %>
        <div class="accordion" id="psaCategoriesAccordion">
          <% @scale_response_adapter.category_domains_with_levels.each_with_index do |category, index| %>
            <div class="accordion-item">
              <h2 class="accordion-header" id="heading<%= category[:key] %>">
                <button class="accordion-button <%= 'collapsed' unless index == 0 %>" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#collapse<%= category[:key] %>" 
                        aria-expanded="<%= index == 0 ? 'true' : 'false' %>" 
                        aria-controls="collapse<%= category[:key] %>">
                  <i class="bi bi-list-check me-2"></i>
                  <strong><%= category[:name] %></strong>
                  <span class="badge bg-primary ms-2">
                    Pontuação: <%= category[:total] %>
                  </span>
                  <span class="badge bg-info ms-2">
                    Média: <%= category[:average] %>
                  </span>
                  <span class="badge bg-<%= category[:average] >= 4.0 ? 'danger' : category[:average] <= 2.0 ? 'success' : 'warning' %> ms-2">
                    <%= category[:interpretation] %>
                  </span>
                </button>
              </h2>
              
              <div id="collapse<%= category[:key] %>" 
                   class="accordion-collapse collapse <%= 'show' if index == 0 %>" 
                   aria-labelledby="heading<%= category[:key] %>" 
                   data-bs-parent="#psaCategoriesAccordion">
                <div class="accordion-body">
                  <div class="row">
                    <div class="col-md-6">
                      <h6>Estatísticas da Categoria</h6>
                      <ul class="list-unstyled">
                        <li><strong>Pontuação Total:</strong> <%= category[:total] %></li>
                        <li><strong>Média:</strong> <%= category[:average] %></li>
                        <li><strong>Itens Respondidos:</strong> <%= category[:answered_items] %>/<%= category[:total_items] %></li>
                        <li><strong>Taxa de Completude:</strong> <%= category[:completion_rate] %>%</li>
                      </ul>
                    </div>
                    <div class="col-md-6">
                      <h6>Interpretação</h6>
                      <p class="mb-0"><%= category[:interpretation] %></p>
                    </div>
                  </div>
                  
                  <!-- Comentários da categoria (se houver) -->
                  <% if @scale_response_adapter.has_comment_for?(category[:key]) %>
                    <div class="mt-3">
                      <div class="alert alert-light">
                        <h6><i class="bi bi-chat-text me-2"></i>Comentários</h6>
                        <p class="mb-0"><%= @scale_response_adapter.comment_for(category[:key]) %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-warning">
          <i class="bi bi-exclamation-triangle me-2"></i>
          Dados de interpretação não disponíveis.
        </div>
      <% end %>
    </div>
  </div>

  <!-- Resumo da Interpretação -->
  <div class="card mb-4">
    <div class="card-header">
      <h6 class="mb-0">
        <i class="bi bi-file-text me-2"></i>
        Resumo da Interpretação
      </h6>
    </div>
    <div class="card-body">
      <% if @interpretation %>
        <div class="interpretation-content">
          <%= simple_format(@interpretation) %>
        </div>
      <% else %>
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          Interpretação detalhada será gerada em breve.
        </div>
      <% end %>
    </div>
  </div>

  <!-- Análise de Padrões -->
  <div class="card mb-4">
    <div class="card-header">
      <h6 class="mb-0">
        <i class="bi bi-lightbulb me-2"></i>
        Análise de Padrões de Responsividade
      </h6>
    </div>
    <div class="card-body">
      <% if @scale_response_adapter %>
        <div class="row">
          <div class="col-md-6">
            <h6>Categorias com Alta Responsividade</h6>
            <ul class="list-unstyled">
              <% @scale_response_adapter.category_domains_with_levels.select { |c| c[:average] >= 4.0 }.each do |category| %>
                <li class="mb-2">
                  <i class="bi bi-arrow-up text-danger me-2"></i>
                  <strong><%= category[:name] %></strong> (Média: <%= category[:average] %>)
                </li>
              <% end %>
              <% if @scale_response_adapter.category_domains_with_levels.select { |c| c[:average] >= 4.0 }.empty? %>
                <li class="text-muted">Nenhuma categoria com alta responsividade</li>
              <% end %>
            </ul>
          </div>
          <div class="col-md-6">
            <h6>Categorias com Baixa Responsividade</h6>
            <ul class="list-unstyled">
              <% @scale_response_adapter.category_domains_with_levels.select { |c| c[:average] <= 2.0 }.each do |category| %>
                <li class="mb-2">
                  <i class="bi bi-arrow-down text-success me-2"></i>
                  <strong><%= category[:name] %></strong> (Média: <%= category[:average] %>)
                </li>
              <% end %>
              <% if @scale_response_adapter.category_domains_with_levels.select { |c| c[:average] <= 2.0 }.empty? %>
                <li class="text-muted">Nenhuma categoria com baixa responsividade</li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recomendações Clínicas -->
  <div class="card mb-4">
    <div class="card-header">
      <h6 class="mb-0">
        <i class="bi bi-heart me-2"></i>
        Recomendações Clínicas
      </h6>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h6>Intervenções Recomendadas</h6>
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              Desenvolver estratégias de modulação sensorial
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              Implementar dieta sensorial personalizada
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              Considerar terapia ocupacional especializada
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              Avaliar necessidade de adaptações ambientais
            </li>
          </ul>
        </div>
        <div class="col-md-6">
          <h6>Próximos Passos</h6>
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="bi bi-arrow-right text-primary me-2"></i>
              Revisar resultados com equipe multidisciplinar
            </li>
            <li class="mb-2">
              <i class="bi bi-arrow-right text-primary me-2"></i>
              Desenvolver plano de intervenção individualizado
            </li>
            <li class="mb-2">
              <i class="bi bi-arrow-right text-primary me-2"></i>
              Estabelecer metas de tratamento específicas
            </li>
            <li class="mb-2">
              <i class="bi bi-arrow-right text-primary me-2"></i>
              Agendar reavaliação em 3-6 meses
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
