<% 
  # Mapeamento das categorias PSA
  psa_categories = {
    'A' => { name: 'Processamento Tátil/Olfativo', items: (1..8).to_a, color: 'primary' },
    'B' => { name: 'Processamento Vestibular/Proprioceptivo', items: (9..16).to_a, color: 'success' },
    'C' => { name: 'Processamento Visual', items: (17..26).to_a, color: 'info' },
    'D' => { name: 'Processamento Tátil', items: (27..39).to_a, color: 'warning' },
    'E' => { name: 'Nível de Atividade', items: (40..49).to_a, color: 'danger' },
    'F' => { name: 'Processamento Auditivo', items: (50..60).to_a, color: 'secondary' }
  }
%>

<div class="psa-form">
  <!-- Formulário organizado por categorias -->
  <% psa_categories.each do |category_code, category_info| %>
    <div class="card mb-4">
      <div class="card-header bg-<%= category_info[:color] %> text-white">
        <h5 class="card-title mb-0">
          <i class="bi bi-tag me-2"></i>
          Categoria <%= category_code %>: <%= category_info[:name] %>
        </h5>
        <small>
          Itens <%= category_info[:items].first %>-<%= category_info[:items].last %> 
          (<%= category_info[:items].count %> questões)
        </small>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-bordered mb-0">
            <thead class="table-light">
              <tr>
                <th style="width: 5%;" class="text-center">Item</th>
                <th style="width: 50%;">Pergunta</th>
                <th style="width: 9%;" class="text-center">1</th>
                <th style="width: 9%;" class="text-center">2</th>
                <th style="width: 9%;" class="text-center">3</th>
                <th style="width: 9%;" class="text-center">4</th>
                <th style="width: 9%;" class="text-center">5</th>
              </tr>
            </thead>
            <tbody>
              <% scale_items.select { |item| category_info[:items].include?(item.item_number) }.each do |item| %>
                <tr>
                  <td class="text-center fw-bold"><%= item.item_number %></td>
                  <td class="align-middle">
                    <%= item.question_text %>
                  </td>
                  <% item.options.sort_by { |k,_| k.to_i }.each do |score, label| %>
                    <td class="text-center">
                      <div class="form-check d-flex justify-content-start">
                        <%= radio_button_tag "scale_response[answers][item_#{item.item_number}]", score, false,
                            class: "form-check-input", 
                            id: "item_#{item.item_number}_#{score}" %>
                      </div>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>

</div>

<style>
/* Estilos para a tabela PSA */
.psa-form .table {
  font-size: 0.9rem;
}

.psa-form .table th {
  font-weight: 600;
  font-size: 0.85rem;
  padding: 0.75rem 0.5rem;
}

.psa-form .table td {
  padding: 0.75rem 0.5rem;
  vertical-align: middle;
}

.psa-form .form-check-input {
  margin: 0;
  transform: scale(1.1);
}

.psa-form .table tbody tr:hover {
  background-color: rgba(0, 123, 255, 0.05);
}

/* Responsividade para tabelas */
@media (max-width: 768px) {
  .psa-form .table {
    font-size: 0.8rem;
  }
  
  .psa-form .table th,
  .psa-form .table td {
    padding: 0.5rem 0.25rem;
  }
  
  .psa-form .table th:nth-child(3),
  .psa-form .table th:nth-child(4),
  .psa-form .table th:nth-child(5),
  .psa-form .table th:nth-child(6),
  .psa-form .table th:nth-child(7) {
    font-size: 0.7rem;
  }
}

</style>

