<% content_for :title, "Interpretação de Resultados - #{@scale_response.psychometric_scale.name} - #{@scale_response.patient.full_name}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1">
            <i class="bi bi-clipboard-data me-2"></i>
            <%= @scale_response.psychometric_scale.name %> — Resultados
          </h1>
          <p class="text-muted mb-0">
            <strong><%= @scale_response.psychometric_scale.name %></strong> - 
            <strong><%= @scale_response.patient.full_name %></strong>
          </p>
        </div>
        <div class="row">
          <div class="col">
            <%= link_to "Voltar ao Perfil", patient_path(@scale_response.patient), class: "btn btn-secondary" %>
          </div>
          <div class="col">
            <% if policy(@scale_response).destroy? %>
              <%= button_to "Descartar Escala", scale_response_path(@scale_response), method: :delete, data: { turbo_confirm: "Tem certeza que deseja descartar esta escala? Esta ação cancelará a solicitação correspondente e não pode ser desfeita." }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Informações do Paciente -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h4 class="card-title mb-2">Informações do Paciente</h5>
              <p class="mb-1"><strong>Nome:</strong> <%= @scale_response.patient.full_name %></p>
              <p class="mb-1"><strong>Idade:</strong> <%= @scale_response.patient.age %> anos</p>
              <p class="mb-1"><strong>Data de Nascimento:</strong> <%= l(@scale_response.patient.birthday, format: :short) %></p>
            </div>
            <div class="col-md-6">
              <h4 class="card-title mb-2">Informações da Avaliação</h5>
              <% if @scale_response.psychometric_scale.code == "SRS2SR" %>
                <!-- Se @scale_response é autorrelato -->
                <p class="mb-1"><strong>Autorrelato solicitado em:</strong> <%= l(@scale_response.scale_request.requested_at, format: :short) %></p>
                <p class="mb-1"><strong>Autorrelato preenchido em:</strong> <%= l(@scale_response.completed_at, format: :short) %></p>
                <% if @hetero_response.present? %>
                  <p class="mb-1"><strong>Heterorrelato solicitado em:</strong> <%= l(@hetero_response.scale_request.requested_at, format: :short) %></p>
                  <p class="mb-1"><strong>Heterorrelato preenchido em:</strong> <%= l(@hetero_response.completed_at, format: :short) %></p>
                  <p class="mb-1"><strong>Relator:</strong> <%= @hetero_response.relator_name %> (<%= @hetero_response.relator_relationship %>)</p>
                <% end %>
              <% elsif @scale_response.psychometric_scale.code == "SRS2HR" %>
                <!-- Se @scale_response é heterorrelato -->
                <p class="mb-1"><strong>Heterorrelato solicitado em:</strong> <%= l(@scale_response.scale_request.requested_at, format: :short) %></p>
                <p class="mb-1"><strong>Heterorrelato preenchido em:</strong> <%= l(@scale_response.completed_at, format: :short) %></p>
                <p class="mb-1"><strong>Relator:</strong> <%= @scale_response.relator_name %> (<%= @scale_response.relator_relationship %>)</p>
                <% if @hetero_response.present? %>
                  <p class="mb-1"><strong>Autorrelato solicitado em:</strong> <%= l(@hetero_response.scale_request.requested_at, format: :short) %></p>
                  <p class="mb-1"><strong>Autorrelato preenchido em:</strong> <%= l(@hetero_response.completed_at, format: :short) %></p>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <!-- Interpretação -->
      <% if @scale_response.psychometric_scale.code == "SRS2SR" %>
        <%= render 'srs2/scale_responses/interpretation', 
            scale_response: @scale_response,
            interpretation: @interpretation,
            scale_response_adapter: @scale_response_adapter,
            hetero_reports: @hetero_reports,
            chart_data: @chart_data,
            chart_service: @chart_service %>
      <% end %>

     

    </div>
  </div>
</div>
