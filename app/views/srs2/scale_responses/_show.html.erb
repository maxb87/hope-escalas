<% content_for :title, "Interpretação de Resultados - #{@scale_response.psychometric_scale.name} - #{@scale_response.patient.full_name}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-1">
            <i class="bi bi-clipboard-data me-2"></i>
            <%= @scale_response.psychometric_scale.name %> — Resultado 
          </h1>
          <p class="text-muted mb-0">
            <strong><%= @scale_response.psychometric_scale.name %></strong> - 
            <strong><%= @scale_response.patient.full_name %></strong>
          </p>
        </div>
        <div class="row">
          <div class="col">
            <%= link_to "Voltar ao Perfil", patient_path(@scale_response.patient), class: "btn btn-secondary" %>
          </div>
          <div class="col">
            <% if policy(@scale_response).destroy? %>
              <%= button_to "Descartar Escala", scale_response_path(@scale_response), method: :delete, data: { turbo_confirm: "Tem certeza que deseja descartar esta escala? Esta ação cancelará a solicitação correspondente e não pode ser desfeita." }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Informações do Paciente -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5 class="card-title">Informações do Paciente</h5>
              <p class="mb-1"><strong>Nome:</strong> <%= @scale_response.patient.full_name %></p>
              <p class="mb-1"><strong>Idade:</strong> <%= @scale_response.patient.age %> anos</p>
              <p class="mb-1"><strong>Data de Nascimento:</strong> <%= l(@scale_response.patient.birthday, format: :short) %></p>
            </div>
            <div class="col-md-6">
              <h5 class="card-title">Informações da Avaliação</h5>
              <% if @scale_response.psychometric_scale.code == "SRS2SR" %>
                <!-- Se @scale_response é autorrelato -->
                <p class="mb-1"><strong>Autorrelato solicitado em:</strong> <%= l(@scale_response.scale_request.requested_at, format: :short) %></p>
                <p class="mb-1"><strong>Autorrelato preenchido em:</strong> <%= l(@scale_response.completed_at, format: :short) %></p>
                <% if @hetero_response.present? %>
                  <p class="mb-1"><strong>Heterorrelato solicitado em:</strong> <%= l(@hetero_response.scale_request.requested_at, format: :short) %></p>
                  <p class="mb-1"><strong>Heterorrelato preenchido em:</strong> <%= l(@hetero_response.completed_at, format: :short) %></p>
                  <p class="mb-1"><strong>Relator:</strong> <%= @hetero_response.relator_name %> (<%= @hetero_response.relator_relationship %>)</p>
                <% end %>
              <% elsif @scale_response.psychometric_scale.code == "SRS2HR" %>
                <!-- Se @scale_response é heterorrelato -->
                <p class="mb-1"><strong>Heterorrelato solicitado em:</strong> <%= l(@scale_response.scale_request.requested_at, format: :short) %></p>
                <p class="mb-1"><strong>Heterorrelato preenchido em:</strong> <%= l(@scale_response.completed_at, format: :short) %></p>
                <p class="mb-1"><strong>Relator:</strong> <%= @scale_response.relator_name %> (<%= @scale_response.relator_relationship %>)</p>
                <% if @hetero_response.present? %>
                  <p class="mb-1"><strong>Autorrelato solicitado em:</strong> <%= l(@hetero_response.scale_request.requested_at, format: :short) %></p>
                  <p class="mb-1"><strong>Autorrelato preenchido em:</strong> <%= l(@hetero_response.completed_at, format: :short) %></p>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>


      <!-- Interpretação -->
      <div class="mt-4">
        <div class="accordion" id="interpretationAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header" id="interpretationHeader">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#interpretationCollapse" aria-expanded="false" aria-controls="interpretationCollapse">
                <i class="bi bi-clipboard-check me-2"></i>
                <h3>Interpretação dos Resultados</h3>
              </button>
            </h2>
            <div id="interpretationCollapse" class="accordion-collapse collapse" aria-labelledby="interpretationHeader" data-bs-parent="#interpretationAccordion">
              <div class="accordion-body">
                <% if @interpretation.present? %>
                  <div>
                    <!-- interpretacao introducao -->
                    <p><%= @interpretation[:introduction].html_safe %></p>
                  </div>
                <% else %>
                  <div class="alert alert-info">
                    <p>Interpretação não disponível para esta escala.</p>
                  </div>
                <% end %>
                
                <% if @scale_response_adapter.present? %>
                  <div class="my-4">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Domínio</th>
                          <% if @scale_response.psychometric_scale.code == "SRS2SR" %>
                            <th>Autorrelato</th>
                            <th>Heterorrelato</th>
                          <% else %>
                            <th>Heterorrelato</th>
                            <th>Autorrelato</th>
                          <% end %>
                        </tr>
                      </thead>
                      <tbody>
                        <% @scale_response_adapter.subscale_domains_with_levels.each do |domain| %>
                          <% hetero_domain = @hetero_response&.subscale_domains_with_levels&.find { |d| d[:key] == domain[:key] } %>
                          <tr>
                            <td><%= domain[:title] %></td>
                            <% if @scale_response.psychometric_scale.code == "SRS2SR" %>
                              <!-- Se @scale_response é autorrelato, mostrar autorrelato primeiro -->
                              <td>
                                <%= domain[:t_score] %> (<%= domain[:level] == "normal" ? "sem prejuízo" : "prejuízo #{domain[:level]}" %>)
                              </td>
                              <td>
                                <% if hetero_domain %>
                                  <%= hetero_domain[:t_score] %> (<%= hetero_domain[:level] == "normal" ? "sem prejuízo" : "prejuízo #{hetero_domain[:level]}" %>)
                                <% else %>
                                  -
                                <% end %>
                              </td>
                            <% else %>
                              <!-- Se @scale_response é heterorrelato, mostrar heterorrelato primeiro -->
                              <td>
                                <%= domain[:t_score] %> (<%= domain[:level] == "normal" ? "sem prejuízo" : "prejuízo #{domain[:level]}" %>)
                              </td>
                              <td>
                                <% if hetero_domain %>
                                  <%= hetero_domain[:t_score] %> (<%= hetero_domain[:level] == "normal" ? "sem prejuízo" : "prejuízo #{hetero_domain[:level]}" %>)
                                <% else %>
                                  -
                                <% end %>
                              </td>
                            <% end %>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
                
                <div>
                  <p>
                    <i>Nota. SRS-2: >59 normal; 60-65 sintomatologia leve; 66-75 sintomatologia moderada; 76+ sintomatologia grave.</i>
                  </p>
                </div>
                
                <% if @scale_response_adapter.present? %>
                  <div class="my-4">
                    <% @scale_response_adapter.subscale_domains_with_levels.each do |domain| %>            
                      <% if domain[:level] != "normal" %>
                      <div>
                        <p><strong><%= domain[:title] %>:</strong> <%= domain[:description]%> <%= domain[:interpretation]%></p>
                      </div>
                      <% else %>
                        <div>
                          <p><strong><%= domain[:title] %>:</strong> <%= domain[:interpretation]%></p>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>

                <% if @interpretation.present? && @interpretation[:hetero_report].present? %>
                  <div class="my-4">
                    <%= @interpretation[:hetero_report].html_safe %>
                  </div>
                <% end %>
                
                <% if @chart_service.present? && @chart_data.present? %>
                  <div class="py-4">
                    <%= srs2_comparison_chart(@chart_data, height: "500px", max_width: "800px") %>
                    <script>
                      <%= @chart_service.chart_js_function.html_safe %>
                    </script>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

     

    </div>
  </div>
</div>
