# Opções padrão para todos os itens
options = {
  '1' => 'Nunca é verdade',
  '2' => 'Raramente é verdade',
  '3' => 'Às vezes é verdade',
  '4' => 'Frequentemente é verdade'
}

# Criar itens para ambas as escalas
[ srs2_self, srs2_hetero ].each do |scale|
  puts "Criando #{srs2_items.count} itens para: #{scale.name}"
  srs2_items.each do |item_data|
    PsychometricScaleItem.find_or_create_by!(
      psychometric_scale: scale,
      item_number: item_data[:item_number]
    ) do |item|
      item.question_text = item_data[:question_text]
      item.options = options
      item.is_required = true
    end
  end
  puts "✅ #{srs2_items.count} itens criados para #{scale.name}"
end

